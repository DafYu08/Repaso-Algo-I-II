#include <iostream>
#include <math.h>
#include <vector>

using namespace std;

//SUMAS Y PROMEDIOS
void sumaYPromedio{
int cantEst;
    cout<< "Hola, ingrese la cantidad de estudiantes: "<<endl;
    cin >> cantEst;
    float suma = 0;
    float prom = 0;
    for (int i = 0; i < cantEst; i++) {
        float x;
        cout<<"Ingrese una calificaciÃ³n: "<<endl;
        cin>> x;
        if (0<x && x<=10) {
            suma += x;
            prom += x / cantEst;
        } else {
            i--;
            cout<<"Reingrese el dato anterior"<<endl;
        }
    }
    cout<<"La suma total es: "<< suma<< endl;
    cout<<"El promedio es: "<< prom<<endl;
}

int main () {
    sumaYPromedio();
    return 0;
}

//COLLATZ
oid collatz(int &n, int& cantPasos){
    if (n%2==0){
        n /= 2;
    } else{
        n = 3*n + 1;
    }
    cantPasos++;
    cout<< n <<" ";
}

int main () {
    int n;
    int cantPasos = 0;
    cout<< "Ingrese un natural: "<<endl;
    cin>> n;
    while (n != 1){
        collatz(n, cantPasos);
    }
    cout <<" "<<endl;
    cout<< "Cantidad total de pasos: "<< cantPasos;

    return 0;
}oid collatz(int &n, int& cantPasos){
    if (n%2==0){
        n /= 2;
    } else{
        n = 3*n + 1;
    }
    cantPasos++;
    cout<< n <<" ";
}

